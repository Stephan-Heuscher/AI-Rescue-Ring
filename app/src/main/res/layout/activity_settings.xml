<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/background"
    tools:context=".SettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        android:paddingTop="24dp"
        android:paddingBottom="32dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="28dp">

            <ImageButton
                android:id="@+id/back_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_arrow_back"
                android:contentDescription="@string/back"
                style="?android:attr/borderlessButtonStyle"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:padding="12dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/settings_title"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="?android:attr/textColorPrimary"
                android:layout_marginStart="16dp" />
        </LinearLayout>

        <!-- Section: Appearance -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/surface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸŽ¨  Appearance"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary"
                    android:layout_marginBottom="20dp" />

                <!-- Size -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ring Size"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="?android:attr/textColorPrimary"
                        android:layout_marginBottom="12dp" />

                    <SeekBar
                        android:id="@+id/size_seekbar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="100"
                        android:progress="50"
                        android:progressTint="@color/primary"
                        android:thumbTint="@color/primary" />
                </LinearLayout>

                <!-- Color -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ring Color"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="?android:attr/textColorPrimary"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal">

                    <Button
                        android:id="@+id/color_blue"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:backgroundTint="@color/ring_blue"
                        android:layout_marginEnd="12dp"
                        app:cornerRadius="28dp" />

                    <Button
                        android:id="@+id/color_red"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:backgroundTint="@color/ring_red"
                        android:layout_marginEnd="12dp"
                        app:cornerRadius="28dp" />

                    <Button
                        android:id="@+id/color_green"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:backgroundTint="@color/ring_green"
                        android:layout_marginEnd="12dp"
                        app:cornerRadius="28dp" />

                    <Button
                        android:id="@+id/color_black"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:backgroundTint="#000000"
                        app:cornerRadius="28dp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Section: Behavior -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/surface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="âš™ï¸  Behavior"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary"
                    android:layout_marginBottom="16dp" />

                <!-- Keyboard Avoidance -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:minHeight="56dp"
                    android:layout_marginBottom="8dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/keyboard_avoidance"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="?android:attr/textColorPrimary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/keyboard_avoidance_desc"
                            android:textSize="13sp"
                            android:textColor="?android:attr/textColorSecondary"
                            android:layout_marginTop="2dp" />
                    </LinearLayout>

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/keyboard_avoidance_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="48dp"
                        android:minWidth="48dp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/surface_variant"
                    android:layout_marginVertical="8dp" />

                <!-- Vibration Feedback -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:minHeight="56dp"
                    android:layout_marginBottom="8dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Vibration Feedback"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="?android:attr/textColorPrimary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Haptic feedback when touching the ring"
                            android:textSize="13sp"
                            android:textColor="?android:attr/textColorSecondary"
                            android:layout_marginTop="2dp" />
                    </LinearLayout>

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/vibration_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:minHeight="48dp"
                        android:minWidth="48dp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/surface_variant"
                    android:layout_marginVertical="8dp" />

                <!-- Long-press to Drag -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:minHeight="56dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Long-press to Drag"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="?android:attr/textColorPrimary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Prevents accidental repositioning"
                            android:textSize="13sp"
                            android:textColor="?android:attr/textColorSecondary"
                            android:layout_marginTop="2dp" />
                    </LinearLayout>

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/long_press_drag_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="48dp"
                        android:minWidth="48dp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Section: AI Helper -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/surface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ¤–  AI Assistant"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tap the ring to open AI Helper"
                    android:textSize="13sp"
                    android:textColor="?android:attr/textColorSecondary"
                    android:layout_marginBottom="16dp" />

                <!-- Voice Input Toggle -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:minHeight="56dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Voice Input"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="?android:attr/textColorPrimary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Speak to the AI assistant"
                            android:textSize="13sp"
                            android:textColor="?android:attr/textColorSecondary"
                            android:layout_marginTop="2dp" />
                    </LinearLayout>

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/voice_input_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:minHeight="48dp"
                        android:minWidth="48dp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Section: Advanced Features -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/surface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Expandable Header -->
                <LinearLayout
                    android:id="@+id/advanced_features_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:minHeight="48dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ðŸ”§  Advanced"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="?android:attr/textColorSecondary" />

                    <TextView
                        android:id="@+id/advanced_features_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â–¼"
                        android:textSize="14sp"
                        android:textColor="?android:attr/textColorSecondary" />
                </LinearLayout>

                <!-- Collapsible Content -->
                <LinearLayout
                    android:id="@+id/advanced_features_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:layout_marginTop="16dp">

                    <!-- Transparency -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="12dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Transparency"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:textColor="?android:attr/textColorPrimary" />

                            <TextView
                                android:id="@+id/transparency_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="100%"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@color/primary" />
                        </LinearLayout>

                        <SeekBar
                            android:id="@+id/alpha_seekbar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:min="64"
                            android:max="255"
                            android:progress="255"
                            android:progressTint="@color/primary"
                            android:thumbTint="@color/primary" />
                    </LinearLayout>

                    <!-- API Key Input -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="20dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Gemini API Key"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="?android:attr/textColorPrimary"
                            android:layout_marginBottom="8dp" />

                        <EditText
                            android:id="@+id/api_key_input"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Enter your Gemini API key"
                            android:inputType="textPassword"
                            android:minHeight="52dp"
                            android:background="@drawable/edit_text_background"
                            android:padding="14dp"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/api_key_help_link"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Get free at ai.google.dev"
                            android:textSize="12sp"
                            android:textColor="@color/primary"
                            android:layout_marginTop="6dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?android:attr/selectableItemBackground"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Lock Position -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:minHeight="56dp"
                        android:layout_marginBottom="16dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Lock Position"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:textColor="?android:attr/textColorPrimary" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Prevent ring from being moved"
                                android:textSize="13sp"
                                android:textColor="?android:attr/textColorSecondary"
                                android:layout_marginTop="2dp" />
                        </LinearLayout>

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/lock_position_switch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minHeight="48dp"
                            android:minWidth="48dp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/surface_variant"
                        android:layout_marginVertical="8dp" />

                    <!-- Uninstall App -->
                    <Button
                        android:id="@+id/uninstall_button"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:text="@string/uninstall"
                        android:textSize="15sp"
                        android:textColor="@color/error"
                        android:backgroundTint="@color/error_light"
                        style="@style/Widget.Material3.Button.ElevatedButton"
                        android:layout_marginTop="8dp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Legal Notice Button -->
        <Button
            android:id="@+id/impressum_button"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="4dp"
            android:text="@string/impressum_title"
            android:textSize="15sp"
            android:textColor="?android:attr/textColorSecondary"
            android:backgroundTint="@color/surface_variant"
            style="@style/Widget.Material3.Button.ElevatedButton" />

    </LinearLayout>
</ScrollView>
