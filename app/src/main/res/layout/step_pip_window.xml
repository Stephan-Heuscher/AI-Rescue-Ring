<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/stepPipRoot"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <!-- Compact Step Window -->
    <androidx.cardview.widget.CardView
        android:id="@+id/stepPipExpanded"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:elevation="8dp"
        app:cardCornerRadius="12dp"
        app:cardBackgroundColor="@color/surface">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Compact Header with drag handle -->
            <LinearLayout
                android:id="@+id/pipDragHandle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/primary"
                android:paddingHorizontal="12dp"
                android:paddingVertical="8dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/pipStepIndicatorExpanded"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1/5"
                    android:textSize="12sp"
                    android:textColor="#CCFFFFFF"
                    android:textStyle="bold"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/pipStepTitleExpanded"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Step Title"
                    android:textSize="14sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="end"/>

                <ImageButton
                    android:id="@+id/pipCloseButton"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@android:drawable/ic_menu_close_clear_cancel"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Close"
                    app:tint="#FFFFFF"/>
            </LinearLayout>

            <!-- Step Content (Compact) -->
            <TextView
                android:id="@+id/pipStepContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:textSize="15sp"
                android:lineSpacingExtra="4dp"
                android:textColor="?android:attr/textColorPrimary"
                android:text="Step content..."
                android:maxLines="6"/>

            <!-- Debug: Tap Coordinates Display -->
            <TextView
                android:id="@+id/pipCoordinatesDisplay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:background="#E8F5E9"
                android:textSize="12sp"
                android:textColor="#2E7D32"
                android:textStyle="bold"
                android:gravity="center"
                android:text="ðŸ“ Tap: (x, y)"
                android:visibility="gone"/>

            <!-- Compact Navigation -->
            <LinearLayout
                android:id="@+id/pipFooter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:background="@color/surface_variant">

                <Button
                    android:id="@+id/pipPreviousButton"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:text="â—€"
                    android:textSize="16sp"
                    android:layout_marginEnd="4dp"
                    style="@style/Widget.Material3.Button.TextButton"/>

                <Button
                    android:id="@+id/pipNextButton"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:text="â–¶"
                    android:textSize="16sp"
                    android:layout_marginStart="4dp"
                    style="@style/Widget.Material3.Button.TextButton"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</FrameLayout>
