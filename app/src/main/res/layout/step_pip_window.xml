<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/stepPipRoot"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <!-- Compact Mode (Default) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/stepPipCompact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:elevation="8dp"
        android:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#E01976D2"
            android:padding="12dp"
            android:minWidth="140dp"
            android:maxWidth="180dp">

            <!-- Drag indicator -->
            <View
                android:layout_width="40dp"
                android:layout_height="3dp"
                android:layout_gravity="center_horizontal"
                android:background="#FFFFFF"
                android:layout_marginBottom="6dp"
                android:alpha="0.7"/>

            <TextView
                android:id="@+id/pipStepIndicator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Step 1 of 5"
                android:textSize="12sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/pipStepTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Step Title"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:gravity="center"
                android:maxLines="3"
                android:ellipsize="end"
                android:lineSpacingExtra="2dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tap twice to expand"
                android:textSize="10sp"
                android:textColor="#CCFFFFFF"
                android:gravity="center"
                android:layout_marginTop="4dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Expanded Mode -->
    <androidx.cardview.widget.CardView
        android:id="@+id/stepPipExpanded"
        android:layout_width="280dp"
        android:layout_height="400dp"
        android:layout_margin="8dp"
        android:elevation="8dp"
        android:cardCornerRadius="8dp"
        android:visibility="gone">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#F5F5F5">

            <!-- Drag Handle Header -->
            <LinearLayout
                android:id="@+id/pipDragHandle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#1976D2"
                android:padding="16dp"
                android:elevation="4dp">

                <!-- Drag indicator -->
                <View
                    android:layout_width="60dp"
                    android:layout_height="4dp"
                    android:layout_gravity="center_horizontal"
                    android:background="#FFFFFF"
                    android:layout_marginBottom="8dp"
                    android:alpha="0.7"/>

                <TextView
                    android:id="@+id/pipStepIndicatorExpanded"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Step 1 of 5"
                    android:textSize="14sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginBottom="6dp"/>

                <TextView
                    android:id="@+id/pipStepTitleExpanded"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Step Title"
                    android:textSize="18sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="⬍ Drag to move • Double-tap to minimize ⬍"
                    android:textSize="11sp"
                    android:textColor="#CCFFFFFF"
                    android:gravity="center"
                    android:layout_marginTop="6dp"/>
            </LinearLayout>

            <!-- Content -->
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="16dp"
                android:background="#FFFFFF"
                android:fillViewport="true">

                <TextView
                    android:id="@+id/pipStepContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:lineSpacingExtra="4dp"
                    android:textColor="#000000"
                    android:text="Step content goes here..."/>
            </ScrollView>

            <!-- Navigation Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="12dp"
                android:background="#E0E0E0">

                <Button
                    android:id="@+id/pipPreviousButton"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="◀ Previous"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="4dp"
                    style="?android:attr/buttonBarButtonStyle"/>

                <Button
                    android:id="@+id/pipNextButton"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="Next ▶"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginStart="4dp"
                    style="?android:attr/buttonBarButtonStyle"/>

                <ImageButton
                    android:id="@+id/pipCloseButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@android:drawable/ic_menu_close_clear_cancel"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Minimize"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Right edge resize indicator -->
        <View
            android:id="@+id/rightEdgeIndicator"
            android:layout_width="6dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:background="#40000000"
            android:alpha="0.5"/>

        <!-- Bottom edge resize indicator -->
        <View
            android:id="@+id/bottomEdgeIndicator"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:layout_gravity="bottom"
            android:background="#40000000"
            android:alpha="0.5"/>

        </FrameLayout>
    </androidx.cardview.widget.CardView>

</FrameLayout>
