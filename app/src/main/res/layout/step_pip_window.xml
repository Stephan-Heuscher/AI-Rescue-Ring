<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/stepPipRoot"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <!-- Compact Mode (Default) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/stepPipCompact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:elevation="8dp"
        android:clickable="true"
        android:focusable="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#E01976D2"
            android:padding="12dp"
            android:minWidth="180dp"
            android:maxWidth="220dp">

            <TextView
                android:id="@+id/pipStepIndicator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Step 1 of 5"
                android:textSize="11sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/pipStepTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Step Title"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:gravity="center"
                android:maxLines="2"
                android:ellipsize="end"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Double-tap to expand"
                android:textSize="9sp"
                android:textColor="#CCFFFFFF"
                android:gravity="center"
                android:layout_marginTop="4dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Expanded Mode -->
    <androidx.cardview.widget.CardView
        android:id="@+id/stepPipExpanded"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:elevation="8dp"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#F5F5F5">

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#1976D2"
                android:padding="12dp">

                <TextView
                    android:id="@+id/pipStepIndicatorExpanded"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Step 1 of 5"
                    android:textSize="12sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/pipStepTitleExpanded"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Step Title"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Double-tap to minimize"
                    android:textSize="9sp"
                    android:textColor="#CCFFFFFF"
                    android:gravity="center"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <!-- Content -->
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxHeight="300dp"
                android:padding="12dp"
                android:background="#FFFFFF">

                <TextView
                    android:id="@+id/pipStepContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:text="Step content goes here..."/>
            </ScrollView>

            <!-- Navigation Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="8dp"
                android:background="#E0E0E0">

                <Button
                    android:id="@+id/pipPreviousButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="◀ Previous"
                    android:textSize="12sp"
                    style="?android:attr/buttonBarButtonStyle"/>

                <Button
                    android:id="@+id/pipNextButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Next ▶"
                    android:textSize="12sp"
                    style="?android:attr/buttonBarButtonStyle"/>

                <ImageButton
                    android:id="@+id/pipCloseButton"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@android:drawable/ic_menu_close_clear_cancel"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Close"
                    android:layout_marginStart="4dp"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</FrameLayout>
