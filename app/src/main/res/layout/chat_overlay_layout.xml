<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/chatOverlayMainLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#F2FFFFFF">

    <!-- Minimal Top Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#F02196F3"
        android:padding="8dp"
        android:gravity="center_vertical"
        android:elevation="2dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="AI Rescue"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginStart="4dp"/>

        <ImageButton
            android:id="@+id/moveTopButton"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginEnd="8dp"
            android:background="?android:attr/selectableItemBackground"
            android:src="@android:drawable/arrow_up_float"
            android:contentDescription="Move to Top"
            app:tint="#FFFFFF" />

        <ImageButton
            android:id="@+id/moveBottomButton"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginEnd="8dp"
            android:background="?android:attr/selectableItemBackground"
            android:src="@android:drawable/arrow_down_float"
            android:contentDescription="Move to Bottom"
            app:tint="#FFFFFF" />

        <ImageButton
            android:id="@+id/hideButton"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="?android:attr/selectableItemBackground"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:contentDescription="Hide"
            app:tint="#FFFFFF" />
    </LinearLayout>

    <!-- Screenshot Preview Area (Compact) -->
        <FrameLayout
            android:id="@+id/screenshotPreviewContainer"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="6dp"
            android:visibility="gone"
            android:background="#E0E0E0"
            android:elevation="2dp">

            <ImageView
                android:id="@+id/screenshotPreviewImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:layout_margin="2dp"
                android:contentDescription="Screenshot preview" />

            <Button
                android:id="@+id/deleteScreenshotButton"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="top|end"
                android:layout_margin="4dp"
                android:text="âœ•"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:background="#CC000000"
                style="?android:attr/borderlessButtonStyle" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|start"
                android:layout_margin="4dp"
                android:text="ðŸ“¸ Attached"
                android:textSize="11sp"
                android:textColor="#FFFFFF"
                android:background="#CC000000"
                android:padding="3dp" />
        </FrameLayout>

        <!-- Chat Messages RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/chatMessagesRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="150dp"
            android:padding="8dp"
            android:paddingBottom="8dp"
            android:clipToPadding="false"
            android:scrollbarStyle="outsideOverlay"
            android:nestedScrollingEnabled="true" />

        <!-- Loading Indicator -->
        <ProgressBar
            android:id="@+id/chatLoadingIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="6dp"
            android:visibility="gone" />

        <!-- Steps Container -->
        <LinearLayout
            android:id="@+id/stepsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:background="#F5F5F5"
            android:padding="8dp"
            android:elevation="4dp">

            <TextView
                android:id="@+id/stepIndicator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Step 1 of 5"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="#333333"
                android:textSize="12sp"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/stepTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Step Title"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="#1976D2"
                android:textSize="18sp"
                android:layout_marginBottom="8dp"
                android:paddingHorizontal="8dp"/>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="#FFFFFF"
                android:padding="8dp"
                android:layout_marginBottom="8dp">
                <TextView
                    android:id="@+id/currentStepText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:text="Step content..." />
            </ScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/stepBackwardButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Previous"
                    style="?android:attr/buttonBarButtonStyle" />

                <Space
                    android:layout_width="16dp"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/stepForwardButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Next"
                    style="?android:attr/buttonBarButtonStyle" />
            </LinearLayout>
        </LinearLayout>

        <!-- Input Area -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:gravity="center_vertical"
            android:background="#F0F5F5F5"
            android:elevation="4dp">

            <EditText
                android:id="@+id/chatMessageInput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Ask for help..."
                android:textColor="#000000"
                android:textColorHint="#757575"
                android:minHeight="40dp"
                android:background="@android:drawable/edit_text"
                android:padding="8dp"
                android:inputType="textCapSentences|textMultiLine"
                android:maxLines="3"
                android:textSize="14sp" />

            <ImageButton
                android:id="@+id/chatScreenshotButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@android:drawable/ic_menu_camera"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:layout_marginStart="4dp"
                android:contentDescription="Screenshot" />

            <ImageButton
                android:id="@+id/chatVoiceButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@android:drawable/ic_btn_speak_now"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:layout_marginStart="2dp"
                android:contentDescription="Voice" />

            <ImageButton
                android:id="@+id/chatSendButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@android:drawable/ic_menu_send"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:layout_marginStart="2dp"
                android:contentDescription="Send" />
        </LinearLayout>

    </LinearLayout>
