<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/chatOverlayMainLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#FFFFFFFF">

    <!-- Compact Top Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/primary"
        android:padding="8dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ›Ÿ"
            android:textSize="18sp"
            android:layout_marginEnd="8dp"/>

        <Spinner
            android:id="@+id/chatHistorySpinner"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:background="@android:drawable/btn_dropdown"
            android:spinnerMode="dropdown"/>

        <ImageButton
            android:id="@+id/newChatButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="4dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_add"
            android:contentDescription="New Chat"
            app:tint="#FFFFFF" />

        <ImageButton
            android:id="@+id/hideButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="2dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:contentDescription="Hide"
            app:tint="#FFFFFF" />
    </LinearLayout>

    <!-- Screenshot Preview (Compact) -->
    <FrameLayout
        android:id="@+id/screenshotPreviewContainer"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="4dp"
        android:visibility="gone"
        android:background="@color/surface_variant">

        <ImageView
            android:id="@+id/screenshotPreviewImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:contentDescription="Screenshot preview" />

        <ImageButton
            android:id="@+id/deleteScreenshotButton"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_gravity="top|end"
            android:layout_margin="2dp"
            android:src="@drawable/ic_delete"
            android:background="@drawable/circle_background"
            android:backgroundTint="@color/error"
            android:padding="4dp"
            android:contentDescription="Remove screenshot" />
    </FrameLayout>

    <!-- Chat Messages (Compact) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chatMessagesRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="100dp"
        android:padding="8dp"
        android:clipToPadding="false"
        android:nestedScrollingEnabled="true"
        android:background="@color/background" />

    <!-- Loading Indicator -->
    <ProgressBar
        android:id="@+id/chatLoadingIndicator"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginVertical="4dp"
        android:visibility="gone"
        android:indeterminateTint="@color/primary" />

    <!-- Steps Container (Hidden - using PiP instead) -->
    <LinearLayout
        android:id="@+id/stepsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/stepIndicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/stepTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/currentStepText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

        <Button
            android:id="@+id/stepBackwardButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

        <Button
            android:id="@+id/stepForwardButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>
    </LinearLayout>

    <!-- Compact Input Area -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="6dp"
        android:gravity="center_vertical"
        android:background="@color/surface">

        <EditText
            android:id="@+id/chatMessageInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Ask for help..."
            android:textColor="?android:attr/textColorPrimary"
            android:textColorHint="?android:attr/textColorSecondary"
            android:minHeight="40dp"
            android:background="@drawable/edit_text_background"
            android:paddingHorizontal="10dp"
            android:paddingVertical="8dp"
            android:inputType="textCapSentences|textMultiLine"
            android:maxLines="2"
            android:textSize="14sp" />

        <ImageButton
            android:id="@+id/chatScreenshotButton"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@android:drawable/ic_menu_camera"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:layout_marginStart="4dp"
            android:contentDescription="Take screenshot"
            app:tint="@color/primary" />

        <ImageButton
            android:id="@+id/chatVoiceButton"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@android:drawable/ic_btn_speak_now"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="Voice input"
            app:tint="@color/secondary" />

        <ImageButton
            android:id="@+id/chatSendButton"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@android:drawable/ic_menu_send"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="Send message"
            app:tint="@color/primary" />
    </LinearLayout>

</LinearLayout>
