<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000"
    tools:context=".AIHelperActivity">

    <!-- Screenshot Background (smaller, fully visible) -->
    <ImageView
        android:id="@+id/screenshotBackground"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="top"
        android:scaleType="fitCenter"
        android:alpha="0.5"
        android:visibility="gone" />

    <!-- Dimming overlay on top of screenshot -->
    <View
        android:id="@+id/dimmingOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#60000000"
        android:visibility="gone" />

    <androidx.cardview.widget.CardView
        android:id="@+id/chatCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="12dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="12dp"
        app:cardBackgroundColor="@color/surface">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Top Bar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/chat_header"
                android:paddingHorizontal="16dp"
                android:paddingVertical="12dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ›Ÿ"
                    android:textSize="24sp"
                    android:layout_marginEnd="10dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="AI Helper"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/positionTopButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="â¬†"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:minHeight="40dp"
                    android:padding="0dp"
                    style="?android:attr/buttonBarButtonStyle" />

                <Button
                    android:id="@+id/positionBottomButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="â¬‡"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:minHeight="40dp"
                    android:padding="0dp"
                    style="?android:attr/buttonBarButtonStyle" />

                <Button
                    android:id="@+id/newChatButton"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="New"
                    android:textSize="13sp"
                    android:textColor="@color/white"
                    android:minHeight="40dp"
                    android:paddingHorizontal="12dp"
                    style="?android:attr/buttonBarButtonStyle" />

                <Button
                    android:id="@+id/closeButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="âœ•"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:minHeight="40dp"
                    android:padding="0dp"
                    style="?android:attr/buttonBarButtonStyle" />
            </LinearLayout>

            <!-- Step Navigation -->
            <LinearLayout
                android:id="@+id/stepNavigationContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="12dp"
                android:paddingVertical="10dp"
                android:gravity="center"
                android:background="@color/info_light"
                android:visibility="gone">

                <Button
                    android:id="@+id/stepBackButton"
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:text="â—€ Back"
                    android:textSize="14sp"
                    android:minHeight="44dp"
                    android:textColor="@color/secondary"
                    style="?android:attr/buttonBarButtonStyle" />

                <TextView
                    android:id="@+id/stepIndicator"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Step 1 of 5"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="@color/secondary" />

                <Button
                    android:id="@+id/stepForwardButton"
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:text="Next â–¶"
                    android:textSize="14sp"
                    android:minHeight="44dp"
                    android:textColor="@color/secondary"
                    style="?android:attr/buttonBarButtonStyle" />
            </LinearLayout>

            <!-- Chat Messages RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/messagesRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="12dp"
                android:clipToPadding="false"
                android:background="@color/surface"
                tools:listitem="@layout/item_chat_message" />

            <!-- Loading Indicator -->
            <ProgressBar
                android:id="@+id/loadingIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginVertical="8dp"
                android:indeterminateTint="@color/primary"
                android:visibility="gone" />

            <!-- Input Area -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="12dp"
                android:paddingVertical="12dp"
                android:gravity="center_vertical"
                android:background="@color/surface_variant">

                <EditText
                    android:id="@+id/messageInput"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Ask me anything..."
                    android:minHeight="52dp"
                    android:background="@drawable/chat_input_background"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="14dp"
                    android:inputType="textCapSentences|textMultiLine"
                    android:maxLines="3"
                    android:textSize="16sp"
                    android:textColorHint="?android:attr/textColorSecondary"
                    android:imeOptions="actionSend" />

                <Button
                    android:id="@+id/screenshotButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:text="ðŸ“¸"
                    android:textSize="20sp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/circle_background"
                    android:backgroundTint="@color/surface"
                    style="?android:attr/borderlessButtonStyle" />

                <Button
                    android:id="@+id/voiceButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:text="ðŸŽ¤"
                    android:textSize="20sp"
                    android:layout_marginStart="6dp"
                    android:background="@drawable/circle_background"
                    android:backgroundTint="@color/surface"
                    style="?android:attr/borderlessButtonStyle" />

                <Button
                    android:id="@+id/sendButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:text="âž¤"
                    android:textSize="20sp"
                    android:layout_marginStart="6dp"
                    android:background="@drawable/circle_background"
                    android:backgroundTint="@color/primary"
                    android:textColor="@color/white"
                    style="?android:attr/borderlessButtonStyle" />
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>
